<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds" debug="false">
    <!-- 定义日志格式常量 -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n"/>
    <!-- 定义日志输出根目录（相对项目根目录，也可配置绝对路径如D:/logs） -->
    <property name="LOG_BASE_DIR" value="logs"/>
    <!-- 定义日志文件名称 -->
    <property name="LOG_FILE_NAME" value="kotlin-app"/>

    <!-- 1. 控制台输出Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <!-- 编码器：指定日志格式和编码，必须设置 -->
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 只输出INFO及以上级别到控制台（可选） -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <!-- 2. 文件滚动输出Appender（按天分割，保留历史日志，防止文件过大） -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 日志文件路径+基础名称 -->
        <file>${LOG_BASE_DIR}/${LOG_FILE_NAME}.log</file>
        <!-- 编码器 -->
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 滚动策略：按天滚动，文件名加日期后缀 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 滚动后的日志文件名称：logs/kotlin-app-2026-02-04.log -->
            <fileNamePattern>${LOG_BASE_DIR}/${LOG_FILE_NAME}-%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- 保留历史日志30天，超过自动删除 -->
            <maxHistory>30</maxHistory>
            <!-- 日志总大小上限：超过后删除旧日志 -->
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <!-- 触发策略：文件大小超过100MB也滚动（可选，配合按天滚动） -->
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>
    </appender>

    <!-- 根日志配置：指定默认日志级别和关联的Appender -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/> <!-- 输出到控制台 -->
        <appender-ref ref="FILE"/>    <!-- 输出到文件 -->
    </root>

    <!-- 自定义包/类的日志级别（精准控制，覆盖根配置） -->
    <!-- 例如：你的Kotlin业务代码包，调试时设为DEBUG，生产设为INFO -->
    <logger name="com.github.immersingeducation.immersingpicker" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>
    <!-- 第三方框架日志屏蔽：比如Spring、MyBatis，设为WARN减少无用日志 -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="com.baomidou.mybatisplus" level="WARN"/>
    <logger name="java.sql" level="WARN"/>
</configuration>